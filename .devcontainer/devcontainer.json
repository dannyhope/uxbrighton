// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/images/tree/main/src/ruby
{
  "name": "UX Brighton - Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/ruby",
  "features": {
    "ghcr.io/devcontainers-contrib/features/node-asdf:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "sissel.shopify-liquid",
        "Shopify.ruby-lsp",
        "donjayamanne.python-environment-manager",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "Gruntfuggly.todo-tree",
        "figma.figma-vscode-extension",
        "dbaeumer.vscode-eslint",
        "wholroyd.jinja",
        "ms-vscode-remote.remote-containers",
        "ms-edgedevtools.vscode-edge-devtools",
        "GitHub.copilot@prerelease",
        "GitHub.copilot-chat@prerelease",
        "Codium.codium",
        "spmeesseman.vscode-taskexplorer",
        "EditorConfig.EditorConfig",
        "sissel.netlify-redirects"
      ]
    }
  },
  "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
  // Auto approves the workspace dir as safe in Git
  // https://github.com/microsoft/vscode-remote-release/issues/6810
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}