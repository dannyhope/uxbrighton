{
  "name": "UX Brighton - Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/ruby",
  "features": {
    "ghcr.io/devcontainers-contrib/features/node-asdf:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
		"sissel.shopify-liquid",
		"Shopify.ruby-lsp"
